<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>Register</title>

    <!-- Adapt view for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <!-- Import css file -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script> -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  </head>

  <body>
    <%- include('partials/_header') %>
    <main>
      <div class="adjust-center">

        <h1> Register </h1>

        <form class="login-register" action="/register" method="post">

          <div class="form-group">
            <label for="register-user-name">Name</label>
            <input name="register-user-name" type="text" class="form-control" id="register-user-name" placeholder="Enter your name">
          </div>

          <div class="form-group">
            <label for="register-email">Email Address</label>
            <input name="register-email" type="email" class="form-control" id="register-email" placeholder="Enter your email">
          </div>

          <div class="form-group">
            <label for="register-password">Password</label>
            <input name="register-password" type="password" class="form-control" id="register-password" placeholder="Enter your password">
          </div>

          <div class="form-group">
            <label for="register-check-password">Confirm Password</label>
            <input name="register-check-password" type="password" class="form-control" id="register-check-password" placeholder="Confirm your password">
          </div>

          <button type="submit" class="btn btn-primary">Register</button>

        </form>


      </div>

    </main>

    <%- include('partials/_header') %>
    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="/scripts/register_app.js"></script>
  </body>
</html>
