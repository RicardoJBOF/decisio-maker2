<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>Result</title>

    <!-- Adapt view for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <!-- Import css file -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script> -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  </head>

  <body>
    <%- include('partials/_header') %>
    <main>

      <div class="adjust-center">

        <% if(data.answers) { %>

          <% if(data.creatorsid === user) { %>

            <h1 class="form-group form-group-title"> <%= data.question %> </h1>
            <p class="survey-comments">
            The more points, the more popular the answer is.</p>

            <% for(const answer of data.answers) { %>
              <p class="styling-final-answer"><%= `${answer[0]} - ${answer[1]} points`%></p>
            <% }  %>


          <% } else { %>

            <h1 class="form-group form-group-title"> You are not the creator of this survey. </h1>

          <% } %>

        <% } else { %>

          <h1 class="form-group form-group-title"> This survey does not exist, or no one has voted yet.  </h1>

        <% } %>

      </div>

    </main>

    <%- include('partials/_footer') %>
    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="/scripts/result_app.js"></script>
  </body>
</html>
